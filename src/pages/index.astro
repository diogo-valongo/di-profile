<script is:inline>
const text1 = "Seja bem vindo ao portfólio de:";
const nome = "Diogo Valongo";
const nomeColor = 'text-secondary-500';
const text2 = `Caso você procure um desenvolvedor atualizado, que estuda IA e Cloud por paixão, acostumado a trabalhar em equipe e em diversos tipos de projetos e temas, dê uma olhada nos meus projetos ou certificações. Não hesite em me contatar via <a href=\"https://www.linkedin.com/in/diogo-valongo/\" class=\"text-secondary-500 underline hover:text-secondary-400 transition-colors\" target=\"_blank\">LinkedIn</a> ou <a href=\"mailto:diovalongo@gmail.com\" class=\"text-secondary-500 underline hover:text-secondary-400 transition-colors\">e-mail</a> e me siga no <a href=\"https://github.com/diogo-valongo\" class=\"text-secondary-500 underline hover:text-secondary-400 transition-colors\" target=\"_blank\">Github</a>!`;
const cursor = document.getElementById('terminal-cursor');
const terminalText = document.getElementById('terminal-text');

function sleep(ms) { return new Promise(r => setTimeout(r, ms)); }

async function typeTerminal() {
  // Escreve a saudação
  for (let i = 0; i < text1.length; i++) {
    terminalText.textContent = text1.slice(0, i+1);
    await sleep(40);
  }
  // Nome destacado em nova linha
  await sleep(300);
  const span = document.createElement('span');
  span.className = nomeColor + ' text-2xl md:text-4xl font-bold';
  let nomeTyped = '';
  for (let i = 0; i < nome.length; i++) {
    nomeTyped += nome[i];
    span.textContent = nomeTyped;
    terminalText.innerHTML = text1 + '<br><br>' + span.outerHTML;
    await sleep(70);
  }
  // Espera antes de digitar o texto profissional
  await sleep(1200);
  // Digita o texto profissional em nova linha (sem links durante a digitação)
  let textoProf = '';
  const text2SemLinks = "Caso você procure um desenvolvedor atualizado, que estuda IA e Cloud por paixão, acostumado a trabalhar em equipe e em diversos tipos de projetos e temas, dê uma olhada nos meus projetos ou certificações. Não hesite em me contatar via LinkedIn ou e-mail e me siga no Github!";
  for (let i = 0; i < text2SemLinks.length; i++) {
    textoProf += text2SemLinks[i];
    terminalText.innerHTML = text1 + '<br><br>' + span.outerHTML + '<br><br>' + textoProf;
    await sleep(22);
  }
  // Ao final, substitui LinkedIn, e-mail e Github por links
  terminalText.innerHTML = text1 + '<br><br>' + span.outerHTML + '<br><br>' + text2;
  // Mantém o cursor piscando
  setInterval(() => {
    cursor.style.visibility = cursor.style.visibility === 'hidden' ? 'visible' : 'hidden';
  }, 500);
}
typeTerminal();

const searchInput = document.getElementById('cert-search');
const cards = document.querySelectorAll('.cert-card');
searchInput.addEventListener('input', function() {
  const value = this.value.toLowerCase();
  cards.forEach(card => {
    const tags = card.getAttribute('data-tags');
    const text = card.textContent.toLowerCase();
    if (text.includes(value) || tags.includes(value)) {
      card.style.display = '';
    } else {
      card.style.display = 'none';
    }
  });
});

// Adicionar busca para projetos
const projetosSearchInput = document.getElementById('projetos-search');
const projetosCards = document.querySelectorAll('.projeto-card');
projetosSearchInput.addEventListener('input', function() {
  const value = this.value.toLowerCase();
  projetosCards.forEach(card => {
    const tags = card.getAttribute('data-tags');
    const text = card.textContent.toLowerCase();
    if (text.includes(value) || tags.includes(value)) {
      card.style.display = '';
    } else {
      card.style.display = 'none';
    }
  });
});
</script>

